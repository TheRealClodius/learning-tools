{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Memory Get User Profile Output",
    "description": "User profile generated from analysis of historical dialogues in MemoryOS",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "enum": ["success", "error"],
            "description": "Status of the user profile generation operation"
        },
        "timestamp": {
            "type": "string",
            "description": "When the profile was generated",
            "format": "date-time"
        },
        "user_id": {
            "type": "string",
            "description": "The user identifier"
        },
        "assistant_id": {
            "type": "string",
            "description": "The assistant identifier"
        },
        "user_profile": {
            "type": "string",
            "description": "The generated user profile as formatted text or 'No detailed user profile'"
        },
        "user_knowledge": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "knowledge": {
                        "type": "string",
                        "description": "Knowledge content"
                    },
                    "timestamp": {
                        "type": "string",
                        "description": "When this knowledge was recorded"
                    }
                }
            },
            "description": "User knowledge items (included if include_knowledge=true)"
        },
        "user_knowledge_count": {
            "type": "integer",
            "description": "Number of user knowledge items",
            "minimum": 0
        },
        "assistant_knowledge": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "knowledge": {
                        "type": "string",
                        "description": "Assistant knowledge content"
                    },
                    "timestamp": {
                        "type": "string",
                        "description": "When this knowledge was recorded"
                    }
                }
            },
            "description": "Assistant knowledge items (included if include_assistant_knowledge=true)"
        },
        "assistant_knowledge_count": {
            "type": "integer",
            "description": "Number of assistant knowledge items",
            "minimum": 0
        }
    },
    "required": ["status", "timestamp", "user_id", "assistant_id", "user_profile"]
}
